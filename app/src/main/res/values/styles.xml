<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ToolBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="theme">@style/ToolbarTheme</item>
    </style>


    <style name="ToolbarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <!--<item name="android:background">@drawable/ab_solid_ab_custom</item>-->
        <item name="titleTextAppearance">@style/ActionBarTextAppearance</item>
        <item name="subtitleTextAppearance">@style/ActionBarSubTextAppearance</item>
        <item name="titleMarginStart">10dp</item>
        <item name="android:height">@dimen/ab_height</item>
        <!--<item name="android:background">@color/ab_background</item>-->
        <!--<item name="backgroundSplit">@color/dark_bg</item>-->
        <!--<item name="android:background">@drawable/ab_solid_ab_custom</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="toolbarNavigationButtonStyle">@style/NavigationBtnStyle</item>>-->
        <!--<item name="actionButtonStyle">@style/ActionBtnStyle</item>-->
    </style>

    <style name="ActionBarTextAppearance"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/toolbar_title_normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ActionBarSubTextAppearance"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/toolbar_subtitle</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



</resources>
